<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane vgap="5" hgap="10" alignment="TOP_CENTER"
          xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.testverktyg.eclipselink.view.student.StudentController">
    <padding><Insets top="20"/> </padding>

    <children>
        <Label text="ProvNamn" fx:id="showToStudentTestNameLabel" style="-fx-font-size: 20px" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="6"/>
        <Label text="Det här är en placeholder text som används för att se hur texten wrappar i beskrivningsdelen där man presenterar provet för eleverna. Bla bla bla hopp hej!" fx:id="showToStudentDescriptionLabel" wrapText="true" prefWidth="500" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="6" style="-fx-border-width: 1; -fx-border-color: lightgray; -fx-border-style: solid;"/>
        <Label text="Tid (i minuter):" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <Label fx:id="showToStudentTimeLabel" text="5" prefWidth="50" GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-font-weight: bold;"/>
        <Label text="Lärare:" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
        <Label fx:id="showToStudentTeacherLabel" prefWidth="120" text="Jerry Johansson" GridPane.columnIndex="3" GridPane.rowIndex="2" style="-fx-font-weight: bold;"/>
        <Label text="Klass:" GridPane.columnIndex="4" GridPane.rowIndex="2"/>
        <Label fx:id="showToStudentClassLabel" prefWidth="50" text="JAVA2" GridPane.columnIndex="5" GridPane.rowIndex="2" style="-fx-font-weight: bold;"/>
        <Button fx:id="showToUserStartTestButton" text="Starta" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    </children>


</GridPane>

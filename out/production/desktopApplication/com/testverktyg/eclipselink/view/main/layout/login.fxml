<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<GridPane fx:id="gridPane" xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.testverktyg.eclipselink.view.main.MainController"
          prefHeight="600.0" prefWidth="800.0"
          alignment="CENTER" hgap="10" vgap="10"
>

    <children>
        <Label text="Please sign in:"/>
        <TextField fx:id="usernameTextField"  GridPane.columnIndex="0" GridPane.rowIndex="1" text="teacher"/>
        <PasswordField fx:id="passwordTextField" GridPane.columnIndex="0" GridPane.rowIndex="2" text="teacher"/>
        <Button text="Login" onAction="#logInButton" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <Text fx:id="loginFailed" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    </children>

</GridPane>




            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.testverktyg.eclipselink.view.MenuController">
    <top>
        <GridPane vgap="5" hgap="5" alignment="TOP_CENTER">
            <padding><Insets top="150" left="150" right="150"/></padding>
            <Label GridPane.columnIndex="0" GridPane.rowIndex="0" underline="true"
                   text="Om oss: "/>
            <Label GridPane.columnIndex="0" GridPane.rowIndex="1" maxWidth="1000" wrapText="true"
            text="Testverktyget är ett program som erbjuder skolan möjlighet att skapa sina test,
